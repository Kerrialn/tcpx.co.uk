{% extends 'base.html.twig' %}

{% block title %}
    Refactor Calculator
{% endblock %}

{% block body %}
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            {{ form_start(refactorCalculatorForm) }}
            <div class="card">
                <div class="card-header">
                    <div class="fs-4 fw-bold">Refactor calculator</div>
                </div>
                <div class="card-header bg-white py-3">
                    This calculator assists in making informed decisions about whether to refactor an existing software
                    application or completely rebuild it. By inputting various factors such as
                    technical debt, feature completeness, team expertise, time and cost constraints, and risk level,
                    the calculator evaluates the most suitable approach. It provides a clear recommendation based on
                    the calculated scores, helping stakeholders navigate the complexities of software development
                    projects efficiently.
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.technicalDebt) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.weightedTechnicalDebt) }}
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.featureIncompleteness) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.weightedFeatureIncompleteness) }}
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.teamExpertise) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.weightedTeamExpertise) }}
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.timeConstraints) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.weightedTimeConstraints) }}
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.costConstraints) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.weightedCostConstraints) }}
                            </div>
                        </div>
                    </div>

                    <div class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.failureRisk) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(refactorCalculatorForm.weightedFailureRisk) }}
                            </div>
                        </div>
                    </div>

                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-outline-dark">calculate</button>
                    </div>
                </div>
                {{ form_end(refactorCalculatorForm) }}
            </div>
        </div>
    </div>
{% endblock %}